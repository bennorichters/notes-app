{
  "name": "notes-app",
  "description": "A simple notes application",
  "scripts": {
    "dokku": {
      "predeploy": "/usr/local/bin/predeploy.sh"
    }
  },
  "healthchecks": {
    "web": [
      {
        "type": "startup",
        "name": "web check",
        "description": "Checking if the web process responds",
        "path": "/health",
        "attempts": 3,
        "timeout": 5,
        "wait": 5
      }
    ]
  }
}
